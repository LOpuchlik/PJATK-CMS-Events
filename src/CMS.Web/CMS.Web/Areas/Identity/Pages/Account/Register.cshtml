@page "/Account/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link href="~/css/login.css" rel="stylesheet" />
<div class="d-flex justify-content-center p-5">
    <form action="" method="post" class="register-form">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-lg-6">
                <label for="Input.Email">Email</label>
                <input name="Input.Email" class="form-control" type="email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>

            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6 col-lg-6">
                <label for="Input.Password">Password</label>
                <input name="Input.Password" class="form-control" type="password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>

            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6 col-lg-6">
                <label for="Input.ConfirmPassword">Confirm Password</label>
                <input name="Input.ConfirmPassword" class="form-control" type="password">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-7 col-sm-7 col-xs-7 col-lg-7">
                <button class="btn btn-default logbutton">Sign up</button>
                <a id="log_in" asp-page="./Login">Already a member ? Log in !</a>
            </div>
        </div>
    </form>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
